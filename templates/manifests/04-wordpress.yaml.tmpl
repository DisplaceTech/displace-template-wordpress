apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{.ProjectName}}-wordpress-uploads
  namespace: {{.Namespace}}
  labels:
    app.kubernetes.io/name: {{.ProjectName}}
    app.kubernetes.io/instance: {{.ProjectName}}
    app.kubernetes.io/component: wordpress
    app.kubernetes.io/managed-by: displace
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: {{.WordPressStorageSize}}
---
apiVersion: v1
kind: Secret
metadata:
  name: {{.ProjectName}}-wordpress
  namespace: {{.Namespace}}
  labels:
    app.kubernetes.io/name: {{.ProjectName}}
    app.kubernetes.io/instance: {{.ProjectName}}
    app.kubernetes.io/component: wordpress
    app.kubernetes.io/managed-by: displace
type: Opaque
stringData:
  WORDPRESS_DATABASE_HOST: "{{.ProjectName}}-mariadb"
  WORDPRESS_DATABASE_NAME: "wordpress"
  WORDPRESS_DATABASE_USER: "wordpress"
  WORDPRESS_DATABASE_PASSWORD: "{{.DBPassword}}"
  WORDPRESS_AUTH_KEY: "{{.AuthKey}}"
  WORDPRESS_SECURE_AUTH_KEY: "{{.SecureAuthKey}}"
  WORDPRESS_LOGGED_IN_KEY: "{{.LoggedInKey}}"
  WORDPRESS_NONCE_KEY: "{{.NonceKey}}"
  WORDPRESS_AUTH_SALT: "{{.AuthSalt}}"
  WORDPRESS_SECURE_AUTH_SALT: "{{.SecureAuthSalt}}"
  WORDPRESS_LOGGED_IN_SALT: "{{.LoggedInSalt}}"
  WORDPRESS_NONCE_SALT: "{{.NonceSalt}}"
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{.ProjectName}}-wordpress
  namespace: {{.Namespace}}
  labels:
    app.kubernetes.io/name: {{.ProjectName}}
    app.kubernetes.io/instance: {{.ProjectName}}
    app.kubernetes.io/component: wordpress
    app.kubernetes.io/managed-by: displace
spec:
  replicas: {{.WordPressReplicas}}
  selector:
    matchLabels:
      app.kubernetes.io/name: {{.ProjectName}}
      app.kubernetes.io/component: wordpress
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 0
      maxSurge: 1
  template:
    metadata:
      labels:
        app.kubernetes.io/name: {{.ProjectName}}
        app.kubernetes.io/instance: {{.ProjectName}}
        app.kubernetes.io/component: wordpress
    spec:
      initContainers:
      # Wait for MariaDB to be ready
      - name: wait-for-db
        image: busybox:1.36
        command: ['sh', '-c', 'until nc -z {{.ProjectName}}-mariadb 3306; do echo "Waiting for MariaDB..."; sleep 2; done; echo "MariaDB is ready!"']
      containers:
      - name: wordpress
        # Use locally-built image
        image: {{.ProjectName}}:latest
        imagePullPolicy: IfNotPresent
        envFrom:
        - secretRef:
            name: {{.ProjectName}}-wordpress
        env:
        - name: WORDPRESS_ENV
          value: "production"
        - name: WORDPRESS_HOME
          value: "https://{{.Domain}}"
        - name: WORDPRESS_SITEURL
          value: "https://{{.Domain}}"
        ports:
        - containerPort: 80
          name: http
        livenessProbe:
          httpGet:
            path: /wp-admin/install.php
            port: http
            httpHeaders:
            - name: Host
              value: localhost
          initialDelaySeconds: 120
          periodSeconds: 15
          timeoutSeconds: 5
          failureThreshold: 6
        readinessProbe:
          httpGet:
            path: /wp-login.php
            port: http
            httpHeaders:
            - name: Host
              value: localhost
          initialDelaySeconds: 30
          periodSeconds: 10
          timeoutSeconds: 5
          failureThreshold: 3
        resources:
          limits:
            memory: {{.MemoryLimit}}
            cpu: {{.CPULimit}}
          requests:
            memory: 256Mi
            cpu: 100m
        volumeMounts:
        - name: uploads
          mountPath: /var/www/html/wp-content/uploads
      volumes:
      - name: uploads
        persistentVolumeClaim:
          claimName: {{.ProjectName}}-wordpress-uploads
---
apiVersion: v1
kind: Service
metadata:
  name: {{.ProjectName}}-wordpress
  namespace: {{.Namespace}}
  labels:
    app.kubernetes.io/name: {{.ProjectName}}
    app.kubernetes.io/instance: {{.ProjectName}}
    app.kubernetes.io/component: wordpress
    app.kubernetes.io/managed-by: displace
spec:
  type: ClusterIP
  ports:
  - port: 80
    targetPort: http
    protocol: TCP
    name: http
  selector:
    app.kubernetes.io/name: {{.ProjectName}}
    app.kubernetes.io/component: wordpress
